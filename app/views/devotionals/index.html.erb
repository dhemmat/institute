<% provide(:title, 'Reuniones Devocionales') %>
<div class="row">
  <div class="col-md-12">
  	<div class="widget stacked">
  	  <div class="widget-header">
  	  	<i class="icon-book"></i>
  	  	<h3>Reuniones Devocionales</h3>
  	  </div>
  	  <div class="widget-content">
	  	  <h3>Reuniones Devocionales</h3>		
  	  	<table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Descripci&oacute;n</th>
              <th>Anfitri&oacute;n</th>
              <th>No. Participantes</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @devotionals.each do |t| %>
            	<tr>
	            	<td>
	            		<%= t.id %>
	            	</td>
	            	<td>
	            		<%= t.description %>
	            	</td>
                <td>
                  <% t.devotional_participants.each do |r| %>
                    <% if r.is_host %>
                      <%= "#{r.person.first_name} #{r.person.last_name}"%><br/>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= t.devotional_participants.count %>
                </td>
                <td>
                  <%= link_to "Ver Detalles", devotional_path(t)%>
                </td>
            	</tr>
         		<% end %>
          </tbody>
        </table>
  	  </div>
  	</div>
  </div>
</div>
